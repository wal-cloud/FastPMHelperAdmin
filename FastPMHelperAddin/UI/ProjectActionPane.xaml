<UserControl x:Class="FastPMHelperAddin.UI.ProjectActionPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FastPMHelperAddin.UI"
             Background="#F3F3F3"
             Width="320">

    <UserControl.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryAccent" Color="#0078D4"/>
        <SolidColorBrush x:Key="PrimaryHover" Color="#106EBE"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#323130"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#605E5C"/>
        <SolidColorBrush x:Key="BackgroundCard" Color="White"/>
        <SolidColorBrush x:Key="BackgroundInput" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="BorderSubtle" Color="#EDEBE9"/>
        <SolidColorBrush x:Key="SecondaryButton" Color="#F3F2F1"/>
        <SolidColorBrush x:Key="SecondaryButtonHover" Color="#E1DFDD"/>

        <!-- Modern Button Style (Primary) -->
        <Style x:Key="ModernButtonPrimary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryAccent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style (Secondary) -->
        <Style x:Key="ModernButtonSecondary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryButton}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSubtle}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SecondaryButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BackgroundInput}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4,4,0,0">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Padding="{TemplateBinding Padding}"
                                        VerticalScrollBarVisibility="Auto"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccent}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource BackgroundInput}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Modern DatePicker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="{StaticResource BackgroundInput}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00000000" BlurRadius="8" ShadowDepth="0" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Dropdown Template Selector -->
        <local:ActionDropdownTemplateSelector x:Key="ActionTemplateSelector">
            <!-- Header Template - Bold, not selectable -->
            <local:ActionDropdownTemplateSelector.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayText}"
                               FontWeight="SemiBold"
                               FontSize="11"
                               Foreground="{StaticResource TextSecondary}"
                               Padding="4,6,4,2"
                               IsHitTestVisible="False"/>
                </DataTemplate>
            </local:ActionDropdownTemplateSelector.HeaderTemplate>

            <!-- Action Template - Normal action item -->
            <local:ActionDropdownTemplateSelector.ActionTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayText}"
                               Padding="12,4,4,4"/>
                </DataTemplate>
            </local:ActionDropdownTemplateSelector.ActionTemplate>

            <!-- More Expander Template - Clickable expander -->
            <local:ActionDropdownTemplateSelector.MoreExpanderTemplate>
                <DataTemplate>
                    <TextBlock Text="More..."
                               FontStyle="Italic"
                               Foreground="{StaticResource PrimaryAccent}"
                               Padding="4,6"
                               Cursor="Hand"/>
                </DataTemplate>
            </local:ActionDropdownTemplateSelector.MoreExpanderTemplate>
        </local:ActionDropdownTemplateSelector>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>  <!-- Row 6: Command Center Dashboard -->
        </Grid.RowDefinitions>

        <!-- Title with Gear and Refresh Buttons -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Project Actions"
                       FontSize="20"
                       FontWeight="SemiBold"
                       FontFamily="Segoe UI"
                       Foreground="{StaticResource TextPrimary}"
                       VerticalAlignment="Center"/>

            <Button x:Name="SettingsButton"
                    Grid.Column="1"
                    Content="⚙"
                    FontSize="18"
                    Width="32"
                    Height="32"
                    Padding="0"
                    Margin="0,0,4,0"
                    Style="{StaticResource ModernButtonSecondary}"
                    Click="SettingsButton_Click"
                    ToolTip="Open Settings"/>

            <Button x:Name="RefreshDataButton"
                    Grid.Column="2"
                    Content="⟳"
                    FontSize="18"
                    Width="32"
                    Height="32"
                    Padding="0"
                    Style="{StaticResource ModernButtonSecondary}"
                    Click="RefreshDataButton_Click"
                    ToolTip="Refresh actions and rules from Google Sheets"/>
        </Grid>


        <!-- Action Buttons + Status -->
        <StackPanel Grid.Row="3" Margin="0,0,0,12">
            <!-- Compose Mode Header (only visible in compose mode) -->
            <TextBlock x:Name="ComposeModeHeader"
                       Text="Schedule action on send:"
                       FontSize="13"
                       FontWeight="SemiBold"
                       FontFamily="Segoe UI"
                       Foreground="{StaticResource PrimaryAccent}"
                       Margin="0,0,0,8"
                       Visibility="Collapsed"/>

            <!-- Action Buttons in 2x3 Grid -->
            <UniformGrid Rows="2" Columns="3" Margin="0,0,0,12">
                <Button x:Name="CreateButton" Content="Create New"
                        Style="{StaticResource ModernButtonPrimary}"
                        Click="CreateButton_Click"
                        Margin="0,0,4,4"/>
                <Button x:Name="CreateMultipleButton" Content="Create Multiple"
                        Style="{StaticResource ModernButtonPrimary}"
                        Click="CreateMultipleButton_Click"
                        Margin="0,0,4,4"
                        ToolTip="Extract and create multiple actions from this email"/>
                <Button x:Name="UpdateButton" Content="Update"
                        Style="{StaticResource ModernButtonPrimary}"
                        Click="UpdateButton_Click"
                        Margin="4,0,0,4"
                        IsEnabled="False"/>
                <Button x:Name="CloseButton" Content="Close"
                        Style="{StaticResource ModernButtonPrimary}"
                        Click="CloseButton_Click"
                        Margin="0,4,4,0"
                        IsEnabled="False"/>
                <Button x:Name="ReopenButton" Content="Reopen"
                        Style="{StaticResource ModernButtonPrimary}"
                        Click="ReopenButton_Click"
                        Margin="4,4,0,0"
                        IsEnabled="False"/>
            </UniformGrid>

            <!-- Status Message -->
            <Border Background="{StaticResource BackgroundInput}"
                    CornerRadius="4"
                    Padding="10,8">
                <TextBlock x:Name="StatusTextBlock"
                           Text="Ready"
                           FontSize="12"
                           FontFamily="Segoe UI"
                           Foreground="{StaticResource TextSecondary}"
                           TextWrapping="Wrap"/>
            </Border>
        </StackPanel>

        <!-- Resizable Sections: Linked Action and Open Actions -->
        <Grid x:Name="ResizableSectionsGrid" Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="LinkedActionRow" Height="1.5*" MinHeight="150"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition x:Name="OpenActionsRow" Height="*" MinHeight="100"/>
            </Grid.RowDefinitions>

            <!-- Open Actions Section (Bottom) - Grid.Row="2" -->
            <Border Grid.Row="2" x:Name="OpenActionsCard" Style="{StaticResource CardStyle}" Margin="0,6,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Collapsible Header for Linked Action -->
                    <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="OpenActionsHeader_Click" Cursor="Hand">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   x:Name="OpenActionsExpandIcon"
                                   Text="▼"
                                   FontSize="12"
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="Open Actions"
                                       FontWeight="SemiBold"
                                       FontSize="16"
                                       Foreground="{StaticResource TextPrimary}"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="OpenActionsCollapsedSummary"
                                       Visibility="Collapsed"
                                       FontSize="13"
                                       Foreground="{StaticResource TextSecondary}"
                                       Margin="12,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Open Actions Content -->
                    <ScrollViewer x:Name="OpenActionsContent"
                                  Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  Margin="0,8,0,0">
                        <StackPanel>
                            <!-- Section 1: Overdue Tasks -->
                            <StackPanel x:Name="OverdueSection" Margin="0,0,0,12">
                                <TextBlock x:Name="OverdueLabel"
                                           FontWeight="SemiBold"
                                           FontSize="12"
                                           Foreground="#D32F2F"
                                           Margin="0,0,0,4"/>
                                <ComboBox x:Name="OverdueActionsComboBox"
                                          Style="{StaticResource ModernComboBox}"
                                          DisplayMemberPath="Title"
                                          SelectionChanged="OverdueActionsComboBox_SelectionChanged"/>
                            </StackPanel>

                            <!-- Section 2: With Me Tasks -->
                            <StackPanel x:Name="WithMeSection" Margin="0,0,0,12">
                                <!-- Header Row with User Filter -->
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Label and Expand Button -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock x:Name="WithMeLabel"
                                                   FontWeight="SemiBold"
                                                   FontSize="12"
                                                   Foreground="#FFA000"
                                                   VerticalAlignment="Center"/>

                                        <!-- Expand to filter button (visible in "With Me" mode) -->
                                        <Button x:Name="ExpandUserFilterButton"
                                                Content="⋯"
                                                FontSize="12"
                                                Width="24"
                                                Height="20"
                                                Padding="0"
                                                Margin="4,0,0,0"
                                                Style="{StaticResource ModernButtonSecondary}"
                                                Click="ExpandUserFilterButton_Click"
                                                ToolTip="Filter by any user"/>
                                    </StackPanel>

                                    <!-- User Filter Dropdown (visible in expanded mode) -->
                                    <ComboBox x:Name="UserFilterComboBox"
                                              Grid.Column="2"
                                              Style="{StaticResource ModernComboBox}"
                                              Visibility="Collapsed"
                                              SelectionChanged="UserFilterComboBox_SelectionChanged"
                                              FontSize="11"
                                              Height="24"
                                              MinWidth="100"
                                              HorizontalAlignment="Right"
                                              Margin="0,0,4,0"/>

                                    <!-- Reset to Me button (visible in expanded mode) -->
                                    <Button x:Name="ResetToMeButton"
                                            Grid.Column="3"
                                            Content="✕"
                                            FontSize="14"
                                            Width="24"
                                            Height="24"
                                            Padding="0"
                                            Visibility="Collapsed"
                                            Style="{StaticResource ModernButtonSecondary}"
                                            Click="ResetToMeButton_Click"
                                            ToolTip="Switch back to 'With Me' mode"/>
                                </Grid>

                                <!-- Actions ComboBox -->
                                <ComboBox x:Name="WithMeActionsComboBox"
                                          Style="{StaticResource ModernComboBox}"
                                          DisplayMemberPath="Title"
                                          SelectionChanged="WithMeActionsComboBox_SelectionChanged"/>
                            </StackPanel>

                            <!-- Section 3: Manual Lookup -->
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Action Lookup"
                                           FontWeight="SemiBold"
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondary}"
                                           Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="ActionIdSearchBox"
                                             Grid.Column="0"
                                             Style="{StaticResource ModernTextBox}"
                                             Margin="0,0,8,0"
                                             VerticalContentAlignment="Center"
                                             GotFocus="ActionIdSearchBox_GotFocus"
                                             LostFocus="ActionIdSearchBox_LostFocus"
                                             KeyDown="ActionIdSearchBox_KeyDown"
                                             Foreground="{StaticResource TextSecondary}"
                                             Text="Action ID"/>

                                    <Button x:Name="SearchActionButton"
                                            Grid.Column="1"
                                            Content="Go"
                                            Width="60"
                                            Style="{StaticResource ModernButtonPrimary}"
                                            Click="SearchActionButton_Click"/>
                                </Grid>
                            </StackPanel>

                            <!-- Section 4: Dashboard Results -->
                            <Border x:Name="DashboardResultsSection"
                                    Visibility="Collapsed"
                                    Background="{StaticResource BackgroundInput}"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource BorderSubtle}"
                                    CornerRadius="4"
                                    Padding="12">
                                <StackPanel>
                                    <TextBlock Text="Action Details"
                                               FontWeight="SemiBold"
                                               FontSize="13"
                                               Foreground="{StaticResource TextPrimary}"
                                               Margin="0,0,0,8"/>

                                    <!-- Details Grid (4 rows, 2 columns) -->
                                    <Grid Margin="0,0,0,12">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="Project:"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock x:Name="DashboardProjectText"
                                                   Grid.Row="0" Grid.Column="1"
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,0,0,4"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Text="Package:"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock x:Name="DashboardPackageText"
                                                   Grid.Row="1" Grid.Column="1"
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,0,0,4"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                   Text="Title:"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock x:Name="DashboardTitleText"
                                                   Grid.Row="2" Grid.Column="1"
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,0,0,4"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0"
                                                   Text="Ball Holder:"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextSecondary}"/>
                                        <TextBlock x:Name="DashboardBallHolderText"
                                                   Grid.Row="3" Grid.Column="1"
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   TextWrapping="Wrap"/>
                                    </Grid>

                                    <!-- Related Messages Header -->
                                    <TextBlock Text="Related Messages"
                                               FontWeight="SemiBold"
                                               FontSize="11"
                                               Foreground="{StaticResource TextSecondary}"
                                               Margin="0,0,0,4"/>

                                    <!-- Dashboard Related Messages ListView -->
                                    <ListView x:Name="DashboardRelatedMessagesListView"
                                              Height="150"
                                              BorderThickness="1"
                                              BorderBrush="{StaticResource BorderSubtle}"
                                              Background="White"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              MouseDoubleClick="DashboardRelatedMessagesListView_MouseDoubleClick"
                                              Margin="0,0,0,8">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Date" Width="120">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding DateDisplay}"
                                                                       FontSize="11"/>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="From" Width="150">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding FromDisplay}"
                                                                       FontSize="11"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="Subject" Width="250">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding SubjectDisplay}"
                                                                       FontSize="11"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>

                                    <!-- Open All Messages Button -->
                                    <Button x:Name="DashboardOpenAllButton"
                                            Content="Open All Messages"
                                            Style="{StaticResource ModernButtonSecondary}"
                                            Click="DashboardOpenAllButton_Click"
                                            HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- GridSplitter -->
            <GridSplitter Grid.Row="1"
                          Height="5"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Center"
                          Background="{StaticResource BorderSubtle}"
                          ShowsPreview="False"/>

            <!-- Linked Action Section (Top) - Grid.Row="0" -->
            <Border Grid.Row="0" x:Name="LinkedActionCard" Style="{StaticResource CardStyle}" Margin="0,0,0,6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Collapsible Header for Linked Action -->
                    <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="LinkedActionHeader_Click" Cursor="Hand" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   x:Name="LinkedActionExpandIcon"
                                   Text="▼"
                                   FontSize="12"
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="1"
                                   Text="Linked Action"
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   Foreground="{StaticResource TextPrimary}"
                                   VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Action ComboBox (always visible even when collapsed) -->
                    <ComboBox x:Name="ActionComboBox"
                              Grid.Row="1"
                              ItemTemplateSelector="{StaticResource ActionTemplateSelector}"
                              Style="{StaticResource ModernComboBox}"
                              SelectionChanged="ActionComboBox_SelectionChanged"
                              PreviewMouseDown="ActionComboBox_PreviewMouseDown"
                              Margin="0,0,0,8">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <!-- Disable selection for headers and expander -->
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ItemType}" Value="Header">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Focusable" Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ItemType}" Value="MoreExpander">
                                        <Setter Property="IsEnabled" Value="True"/>
                                        <Setter Property="Focusable" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>

                    <!-- Linked Action Content (Collapsible) -->
                    <ScrollViewer x:Name="LinkedActionContent"
                                  Grid.Row="2"
                                  VerticalScrollBarVisibility="Auto">
                        <!-- Linked Action Details - Only visible when action selected -->
                        <Border x:Name="LinkedActionBorder">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=ActionComboBox, Path=SelectedItem.ItemType}" Value="Action">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <!-- Health Indicators -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <!-- Overdue Indicator (Red Dot) -->
                                <Ellipse x:Name="OverdueIndicator"
                                         Width="10"
                                         Height="10"
                                         Fill="#D32F2F"
                                         Margin="0,0,4,0"
                                         Visibility="Collapsed"
                                         ToolTip="Action is Overdue"/>

                                <!-- With Me Indicator (Amber/Gold Dot) -->
                                <Ellipse x:Name="WithMeIndicator"
                                         Width="10"
                                         Height="10"
                                         Fill="#FFA000"
                                         Visibility="Collapsed"
                                         ToolTip="Assigned to You"/>
                            </StackPanel>

                            <!-- Editable Fields -->
                            <StackPanel>
                        <!-- Project/Package on same line -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="LinkedProjectTextBox"
                                     Grid.Column="0"
                                     Style="{StaticResource ModernTextBox}"
                                     Margin="0,0,4,0"
                                     KeyDown="LinkedField_KeyDown"/>

                            <TextBlock Grid.Column="1"
                                       Text="/"
                                       FontSize="13"
                                       Foreground="{StaticResource TextSecondary}"
                                       VerticalAlignment="Center"
                                       Margin="4,0"/>

                            <TextBox x:Name="LinkedPackageTextBox"
                                     Grid.Column="2"
                                     Style="{StaticResource ModernTextBox}"
                                     Margin="4,0,0,0"
                                     KeyDown="LinkedField_KeyDown"/>
                        </Grid>

                        <!-- Title (Multiline) -->
                        <TextBox x:Name="LinkedTitleTextBox"
                                 Style="{StaticResource ModernTextBox}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 MinLines="2"
                                 MaxLines="4"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,12"
                                 KeyDown="LinkedField_KeyDown"/>

                        <!-- BallHolder -->
                        <TextBox x:Name="LinkedBallHolderTextBox"
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,12"
                                 KeyDown="LinkedField_KeyDown"/>

                        <!-- DueDate -->
                        <DatePicker x:Name="LinkedDueDatePicker"
                                    Style="{StaticResource ModernDatePicker}"
                                    SelectedDateFormat="Short"
                                    Margin="0,0,0,12"/>

                        <!-- Related Messages ListView -->
                        <ListView x:Name="RelatedMessagesListView"
                                  Height="200"
                                  BorderThickness="1"
                                  BorderBrush="{StaticResource BorderSubtle}"
                                  Background="White"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  MouseDoubleClick="RelatedMessagesListView_MouseDoubleClick">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Date" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DateDisplay}"
                                                           FontSize="11"
                                                           FontFamily="Segoe UI"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="From" Width="150">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding FromDisplay}"
                                                           FontSize="11"
                                                           FontFamily="Segoe UI"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding FromDisplay}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Subject" Width="250">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SubjectDisplay}"
                                                           FontSize="11"
                                                           FontFamily="Segoe UI"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding Subject}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <!-- Action Buttons (centered below ListView) -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                            <Button x:Name="OpenAllMessagesButton"
                                    Content="Open All ✉"
                                    FontSize="12"
                                    Height="32"
                                    Padding="12,0"
                                    Margin="0,0,8,0"
                                    Style="{StaticResource ModernButtonSecondary}"
                                    Click="OpenAllMessagesButton_Click"
                                    ToolTip="Open all related messages"/>

                            <Button x:Name="SaveLinkedActionButton"
                                    Content="✓"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Width="32"
                                    Height="32"
                                    Padding="0"
                                    Style="{StaticResource ModernButtonSecondary}"
                                    Click="SaveLinkedActionButton_Click"
                                    ToolTip="Save changes (or press Enter in any field)"/>
                        </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
