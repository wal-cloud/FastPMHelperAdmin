<UserControl x:Class="FastPMHelperAddin.UI.ProjectActionPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FastPMHelperAddin.UI"
             Background="#F3F3F3"
             Width="320">

    <UserControl.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryAccent" Color="#0078D4"/>
        <SolidColorBrush x:Key="PrimaryHover" Color="#106EBE"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#323130"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#605E5C"/>
        <SolidColorBrush x:Key="BackgroundCard" Color="White"/>
        <SolidColorBrush x:Key="BackgroundInput" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="BorderSubtle" Color="#EDEBE9"/>
        <SolidColorBrush x:Key="SecondaryButton" Color="#F3F2F1"/>
        <SolidColorBrush x:Key="SecondaryButtonHover" Color="#E1DFDD"/>

        <!-- Modern Button Style (Primary) -->
        <Style x:Key="ModernButtonPrimary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryAccent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style (Secondary) -->
        <Style x:Key="ModernButtonSecondary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryButton}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSubtle}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SecondaryButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BackgroundInput}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4,4,0,0">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Padding="{TemplateBinding Padding}"
                                        VerticalScrollBarVisibility="Auto"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccent}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource BackgroundInput}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Modern DatePicker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="{StaticResource BackgroundInput}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundCard}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00000000" BlurRadius="8" ShadowDepth="0" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Dropdown Template Selector -->
        <local:ActionDropdownTemplateSelector x:Key="ActionTemplateSelector">
            <!-- Header Template - Bold, not selectable -->
            <local:ActionDropdownTemplateSelector.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayText}"
                               FontWeight="SemiBold"
                               FontSize="11"
                               Foreground="{StaticResource TextSecondary}"
                               Padding="4,6,4,2"
                               IsHitTestVisible="False"/>
                </DataTemplate>
            </local:ActionDropdownTemplateSelector.HeaderTemplate>

            <!-- Action Template - Normal action item -->
            <local:ActionDropdownTemplateSelector.ActionTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayText}"
                               Padding="12,4,4,4"/>
                </DataTemplate>
            </local:ActionDropdownTemplateSelector.ActionTemplate>

            <!-- More Expander Template - Clickable expander -->
            <local:ActionDropdownTemplateSelector.MoreExpanderTemplate>
                <DataTemplate>
                    <TextBlock Text="More..."
                               FontStyle="Italic"
                               Foreground="{StaticResource PrimaryAccent}"
                               Padding="4,6"
                               Cursor="Hand"/>
                </DataTemplate>
            </local:ActionDropdownTemplateSelector.MoreExpanderTemplate>
        </local:ActionDropdownTemplateSelector>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title with Refresh Button -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Project Actions"
                       FontSize="20"
                       FontWeight="SemiBold"
                       FontFamily="Segoe UI"
                       Foreground="{StaticResource TextPrimary}"
                       VerticalAlignment="Center"/>

            <Button x:Name="RefreshDataButton"
                    Grid.Column="1"
                    Content="⟳"
                    FontSize="18"
                    Width="32"
                    Height="32"
                    Padding="0"
                    Style="{StaticResource ModernButtonSecondary}"
                    Click="RefreshDataButton_Click"
                    ToolTip="Refresh actions and rules from Google Sheets"/>
        </Grid>

        <!-- Selected Email Card -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="Selected Email"
                           FontWeight="SemiBold"
                           FontSize="12"
                           FontFamily="Segoe UI"
                           Foreground="{StaticResource TextSecondary}"
                           Margin="0,0,0,6"/>
                <TextBlock x:Name="SelectedEmailSubject"
                           Text="No email selected"
                           TextWrapping="Wrap"
                           FontSize="13"
                           FontFamily="Segoe UI"
                           Foreground="{StaticResource TextPrimary}"/>
            </StackPanel>
        </Border>

        <!-- Action Buttons + Status -->
        <StackPanel Grid.Row="3" Margin="0,0,0,12">
            <!-- Compose Mode Header (only visible in compose mode) -->
            <TextBlock x:Name="ComposeModeHeader"
                       Text="Schedule action on send:"
                       FontSize="13"
                       FontWeight="SemiBold"
                       FontFamily="Segoe UI"
                       Foreground="{StaticResource PrimaryAccent}"
                       Margin="0,0,0,8"
                       Visibility="Collapsed"/>

            <!-- Action Buttons in 2x3 Grid -->
            <UniformGrid Rows="2" Columns="3" Margin="0,0,0,12">
                <Button x:Name="CreateButton" Content="Create New"
                        Style="{StaticResource ModernButtonPrimary}"
                        Click="CreateButton_Click"
                        Margin="0,0,4,4"/>
                <Button x:Name="CreateMultipleButton" Content="Create Multiple"
                        Style="{StaticResource ModernButtonPrimary}"
                        Click="CreateMultipleButton_Click"
                        Margin="0,0,4,4"
                        ToolTip="Extract and create multiple actions from this email"/>
                <Button x:Name="UpdateButton" Content="Update"
                        Style="{StaticResource ModernButtonPrimary}"
                        Click="UpdateButton_Click"
                        Margin="4,0,0,4"
                        IsEnabled="False"/>
                <Button x:Name="CloseButton" Content="Close"
                        Style="{StaticResource ModernButtonPrimary}"
                        Click="CloseButton_Click"
                        Margin="0,4,4,0"
                        IsEnabled="False"/>
                <Button x:Name="ReopenButton" Content="Reopen"
                        Style="{StaticResource ModernButtonPrimary}"
                        Click="ReopenButton_Click"
                        Margin="4,4,0,0"
                        IsEnabled="False"/>
            </UniformGrid>

            <!-- Status Message -->
            <Border Background="{StaticResource BackgroundInput}"
                    CornerRadius="4"
                    Padding="10,8">
                <TextBlock x:Name="StatusTextBlock"
                           Text="Ready"
                           FontSize="12"
                           FontFamily="Segoe UI"
                           Foreground="{StaticResource TextSecondary}"
                           TextWrapping="Wrap"/>
            </Border>
        </StackPanel>

        <!-- Action Selection Card - Always visible when email selected -->
        <Border x:Name="ActionSelectionCard"
                Grid.Row="4"
                Margin="0,0,0,12"
                Style="{StaticResource CardStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Action ComboBox -->
                    <TextBlock Text="Select Action"
                               FontWeight="SemiBold"
                               FontSize="11"
                               FontFamily="Segoe UI"
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="ActionComboBox"
                              ItemTemplateSelector="{StaticResource ActionTemplateSelector}"
                              Style="{StaticResource ModernComboBox}"
                              SelectionChanged="ActionComboBox_SelectionChanged"
                              PreviewMouseDown="ActionComboBox_PreviewMouseDown"
                              Margin="0,0,0,16">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <!-- Disable selection for headers and expander -->
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ItemType}" Value="Header">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Focusable" Value="False"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ItemType}" Value="MoreExpander">
                                        <Setter Property="IsEnabled" Value="True"/>
                                        <Setter Property="Focusable" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>

                    <!-- Linked Action Details - Only visible when action selected -->
                    <Border x:Name="LinkedActionBorder">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=ActionComboBox, Path=SelectedItem.ItemType}" Value="Action">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <!-- Section Header -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Linked Action"
                                           FontWeight="SemiBold"
                                           FontSize="16"
                                           FontFamily="Segoe UI"
                                           Foreground="{StaticResource TextPrimary}"
                                           VerticalAlignment="Center"/>

                                <Button x:Name="SaveLinkedActionButton"
                                        Grid.Column="1"
                                        Content="✓"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Width="32"
                                        Height="32"
                                        Padding="0"
                                        Style="{StaticResource ModernButtonPrimary}"
                                        Click="SaveLinkedActionButton_Click"
                                        ToolTip="Save changes (or press Enter in any field)"/>
                            </Grid>

                            <!-- Editable Fields -->
                            <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Project -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Project"
                                   FontWeight="SemiBold"
                                   FontSize="11"
                                   FontFamily="Segoe UI"
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,0,12,4"
                                   VerticalAlignment="Bottom"/>
                        <TextBox x:Name="LinkedProjectTextBox"
                                 Grid.Row="0" Grid.Column="1"
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,12"
                                 KeyDown="LinkedField_KeyDown"/>

                        <!-- Package -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Package"
                                   FontWeight="SemiBold"
                                   FontSize="11"
                                   FontFamily="Segoe UI"
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,0,12,4"
                                   VerticalAlignment="Bottom"/>
                        <TextBox x:Name="LinkedPackageTextBox"
                                 Grid.Row="1" Grid.Column="1"
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,12"
                                 KeyDown="LinkedField_KeyDown"/>

                        <!-- Title (Multiline) -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Title"
                                   FontWeight="SemiBold"
                                   FontSize="11"
                                   FontFamily="Segoe UI"
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,0,12,4"
                                   VerticalAlignment="Top"/>
                        <TextBox x:Name="LinkedTitleTextBox"
                                 Grid.Row="2" Grid.Column="1"
                                 Style="{StaticResource ModernTextBox}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 MinLines="2"
                                 MaxLines="4"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,12"
                                 KeyDown="LinkedField_KeyDown"/>

                        <!-- BallHolder -->
                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="Ball Holder"
                                   FontWeight="SemiBold"
                                   FontSize="11"
                                   FontFamily="Segoe UI"
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,0,12,4"
                                   VerticalAlignment="Bottom"/>
                        <TextBox x:Name="LinkedBallHolderTextBox"
                                 Grid.Row="3" Grid.Column="1"
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,12"
                                 KeyDown="LinkedField_KeyDown"/>

                        <!-- DueDate -->
                        <TextBlock Grid.Row="4" Grid.Column="0"
                                   Text="Due Date"
                                   FontWeight="SemiBold"
                                   FontSize="11"
                                   FontFamily="Segoe UI"
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,0,12,4"
                                   VerticalAlignment="Bottom"/>
                        <DatePicker x:Name="LinkedDueDatePicker"
                                    Grid.Row="4" Grid.Column="1"
                                    Style="{StaticResource ModernDatePicker}"
                                    SelectedDateFormat="Short"/>

                        <!-- Related Messages -->
                        <TextBlock Grid.Row="5" Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   Text="Related Messages"
                                   FontWeight="SemiBold"
                                   FontSize="11"
                                   FontFamily="Segoe UI"
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,12,0,4"/>

                        <ListView x:Name="RelatedMessagesListView"
                                  Grid.Row="6" Grid.Column="0"
                                  Grid.ColumnSpan="2"
                                  Height="200"
                                  BorderThickness="1"
                                  BorderBrush="{StaticResource BorderSubtle}"
                                  Background="White"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  MouseDoubleClick="RelatedMessagesListView_MouseDoubleClick">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Date" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DateDisplay}"
                                                           FontSize="11"
                                                           FontFamily="Segoe UI"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="From" Width="150">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding FromDisplay}"
                                                           FontSize="11"
                                                           FontFamily="Segoe UI"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding FromDisplay}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Subject" Width="250">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SubjectDisplay}"
                                                           FontSize="11"
                                                           FontFamily="Segoe UI"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding Subject}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <!-- Open All Button -->
                        <Button x:Name="OpenAllMessagesButton"
                                Grid.Row="7" Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Content="Open All Messages"
                                Height="30"
                                Margin="0,8,0,0"
                                Style="{StaticResource ModernButtonSecondary}"
                                Click="OpenAllMessagesButton_Click"
                                ToolTip="Open all related messages"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Bottom Settings -->
        <StackPanel Grid.Row="5">
            <CheckBox x:Name="ConfirmActionsCheckBox"
                      Content="Confirm before creating/updating"
                      IsChecked="False"
                      Margin="0,0,0,8"
                      FontSize="12"
                      FontFamily="Segoe UI"
                      Foreground="{StaticResource TextSecondary}"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Default due in:"
                           VerticalAlignment="Center"
                           FontSize="12"
                           FontFamily="Segoe UI"
                           Foreground="{StaticResource TextSecondary}"
                           Margin="0,0,6,0"/>
                <TextBox x:Name="DefaultDueDaysTextBox"
                         Text="7"
                         Width="40"
                         Style="{StaticResource ModernTextBox}"
                         VerticalAlignment="Center"/>
                <TextBlock Text="days"
                           VerticalAlignment="Center"
                           FontSize="12"
                           FontFamily="Segoe UI"
                           Foreground="{StaticResource TextSecondary}"
                           Margin="6,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
